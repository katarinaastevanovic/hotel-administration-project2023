<Window x:Class="HotelReservations.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelReservations"
        mc:Ignorable="d"
        Title="Hotel Reservations TM" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Menu>
                <MenuItem 
                    Header="General"
                    Height="30">
                    <MenuItem 
                        Name="RoomsMI" 
                        Header="Rooms"
                        Click="RoomsMI_Click"
                        />
                    <MenuItem 
                        Name="UsersMI" 
                        Header="Users"
                        Click="UsersMI_Click"
                        />
                    <MenuItem 
                        Name="GuestsMI" 
                        Header="Guests"
                        Click="GuestsMI_Click"
                        />
                    <MenuItem 
                        Name="RoomTypesMI" 
                        Header="RoomTypes"
                        Click="RoomTypesMI_Click"
                        />
                    <MenuItem 
                        Name="PricesMI" 
                        Header="Prices"
                        Click="PricesMI_Click"
                        />
                    <MenuItem 
                        Name="ReservationsMI" 
                        Header="Reservations"
                        Click="ReservationsMI_Click"
                        />
                </MenuItem>
                <MenuItem Header="Logout"
                    Height="30">>
                    <MenuItem 
                        Name="LogoutMI" 
                        Header="Logout"
                        Click="LogoutMI_Click"
                        />
                </MenuItem>
            </Menu>

            
        </StackPanel>
    </Grid>
</Window>

